  EX_LIBS += $(ZLIB_LIB)
endif

$(BUILD_DIR)/bin/llvm-lto.exe: $(OBJECTS) $(LIBS) $(OBJ_DIR)/llvm-lto.res
	$(call link_EXE, $@, $^ $(EX_LIBS))

$(OBJ_DIR)/llvm-lto.rc: $(MDEPEND)
	$(call make_rc, $@, llvm-lto.exe, VFT_APP, LLVM tool; link-time optimization of bitcode files.)

